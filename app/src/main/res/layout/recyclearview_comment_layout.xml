<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@color/awaaz_comment_back_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_uppercontaine_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14sp"
        android:layout_marginRight="14sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/commenter_photo"
            android:layout_width="35sp"
            android:layout_height="35sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/no_pic"/>

        <TextView
            android:id="@+id/commentername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="Krishan Pal Singh"
            android:textColor="@color/black"
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/outfi_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/commenter_photo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/commentsss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="15sp"
        android:fontFamily="@font/outfit_medium"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Brand new components and templates to help folks quickly get started with Bootstrap and demonstrate best practices for adding onto the framework."
        app:layout_constraintBottom_toTopOf="@+id/comment_boottom"
        app:layout_constraintTop_toBottomOf="@+id/comment_uppercontaine_layout"/>

    <Space
        android:id="@+id/comment_boottom"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>